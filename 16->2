#include <stdio.h>
#include <stdlib.h>  

int main()
{
    const char* hexNumbers[] = {
        "7DA", "FF1C", "AAD2", "FFD", "BBAC", "5AFDB", "3FAA"
    };

    int count = sizeof(hexNumbers) / sizeof(hexNumbers[0]);

    printf("Преобразуване на шестнадесетични числа в двоични:\n\n");

    for (int i = 0; i < count; i++)
    {
        long decimal = strtol(hexNumbers[i], NULL, 16);

        printf("Hex: %s => Bin: ", hexNumbers[i]);

        
        int started = 0;  
        for (int bit = sizeof(long) * 8 - 1; bit >= 0; bit--)
        {
            if ((decimal >> bit) & 1)
            {
                started = 1;
                printf("1");
            }
            else if (started)
            {
                printf("0");
            }
        }

        if (!started)
            printf("0");
            printf("\n");
    }

    return 0;
}
